# Production Environment Variables Template
# Copy this to .env.production and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_USER=dashboard
DB_PASSWORD=securepass
DB_NAME=security_dashboard

# Flask Configuration
FLASK_SECRET_KEY=your-very-secure-secret-key-here-use-32-chars-minimum
FLASK_ENV=production

# Server Configuration
PORT=5000
LOG_LEVEL=info

# Security Settings
CORS_ORIGINS=yourdomain.com,localhost:80

# Optional: Email Configuration
EMAIL_SERVICE_ID=your-email-service-id
EMAIL_TEMPLATE_ID=your-email-template-id
EMAIL_PUBLIC_KEY=your-email-public-key
EMAIL_RECIPIENT=admin@yourdomain.com
