#include <SoftwareSerial.h>
#include <TinyGPS++.h>

SoftwareSerial gpsSerial(8, 9);  
TinyGPSPlus gps;

float latitude, longitude;
int numSatellites;
float hdop;

void setup() {
  gpsSerial.begin(9600);  
  Serial.begin(9600);    
  Serial.println("GPS Jamming Detector - Using GPS module (NEO-6M)");
}

void loop() {
  while (gpsSerial.available()) {
    int data = gpsSerial.read();  
    if (gps.encode(data)) {     
      latitude = gps.location.lat();    
      longitude = gps.location.lng(); 
      numSatellites = gps.satellites.value(); 
      hdop = gps.hdop.hdop(); 
      Serial.print("Number of Satellites: ");
Serial.println(gps.satellites.value());


    
      Serial.print("Latitude: ");
      Serial.println(latitude, 6);  
      Serial.print("Longitude: ");
      Serial.println(longitude, 6); 

      Serial.print("Number of Satellites: ");
      Serial.println(numSatellites);

      Serial.print("HDOP: ");
      Serial.println(hdop);

      if (numSatellites < 3 || hdop > 2.0) { 
        Serial.println("ðŸš¨ GPS Jamming Detected!");
      } else {
        Serial.println("GPS Signal OK.");
      }
    }
  }

  delay(5000);  
}
