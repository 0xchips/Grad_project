# WiGuard Dashboard Environment Configuration
# Copy this file to .env and modify values for your system

# Database Configuration
DB_HOST=localhost
DB_USER=dashboard
DB_PASSWORD=securepass
DB_NAME=security_dashboard

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_HOST=127.0.0.1
FLASK_PORT=5053
CORS_ORIGINS=localhost:80,localhost:5050

# Dashboard URLs
DASHBOARD_URL=http://127.0.0.1:5053

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
MONITORING_LOG_FILE=monitoring.log

# Network Interface Configuration (leave empty for auto-detection)
# PRIMARY_INTERFACE=
# MONITOR_INTERFACE=
# BLUETOOTH_INTERFACE=

# System Paths (leave empty for auto-detection)
# AIRMON_PATH=
# IWCONFIG_PATH=
# PYTHON_PATH=

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Feature Toggles
ENABLE_GPS=true
ENABLE_BLUETOOTH=true
ENABLE_NIDS=true
ENABLE_REAL_TIME_MONITORING=true
