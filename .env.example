# WiGuard Security Dashboard Environment Configuration
# Copy this file to .env and modify values as needed

# Flask Application Settings
FLASK_ENV=production
FLASK_SECRET_KEY=your-production-secret-key-change-this-in-production
PORT=5053

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=dashboard
DB_PASSWORD=securepass
DB_NAME=security_dashboard

# MySQL Root Password (for initial setup)
MYSQL_ROOT_PASSWORD=rootpassword

# CORS Configuration
CORS_ORIGINS=localhost:80,localhost:5053,127.0.0.1:5053

# Kismet Configuration
KISMET_HOST=localhost
KISMET_PORT=2502
KISMET_USERNAME=kali
KISMET_PASSWORD=kali

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# External Services (Optional)
NESSUS_HOST=localhost
NESSUS_PORT=8834
NESSUS_ACCESS_KEY=
NESSUS_SECRET_KEY=

# Arduino/IoT Device Settings
ARDUINO_BRIDGE_PORT=5054
